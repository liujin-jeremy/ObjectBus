<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="testSchedulerTodo"
            android:text="testSchedulerTodo"
            />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="testSchedulerTodoDelayed"
            android:text="testSchedulerTodoDelayed"
            />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="testSchedulerTodoMainCallBack"
            android:text="testSchedulerTodoMainCallBack"
            />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="testSchedulerTodoAsyncCallBack"
            android:text="testSchedulerTodoAsyncCallBack"
            />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="testSchedulerCancel"
            android:text="testSchedulerCancel"
            />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="testSchedulerTodoWithListener"
            android:text="testSchedulerTodoWithListener"
            />

    <View
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="testMessengerSend"
            android:text="testMessengerSend"
            />

</LinearLayout>
